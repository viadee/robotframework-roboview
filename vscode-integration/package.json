{
  "name": "roboview",
  "author": "viadee Unternehmensberatung AG",
  "publisher": "viadee",
  "repository": {
    "type": "git",
    "url": "https://github.com/viadee/robotframework-roboview"
  },
  "displayName": "RoboView",
  "description": "RoboView is a tool designed to support Robot Framework users in managing keywords and refactoring their codebase.",
  "icon": "resources/icon.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "keywords": [
    "robot framework",
    "testing",
    "test automation",
    "keywords",
    "robot",
    "qa",
    "rpa",
    "management",
    "view",
    "robo",
    "robocop",
    "keyword usage",
    "keyword overview",
    "keyword details",
    "roboview"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "roboview.openWebview",
        "title": "Open Webview"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "roboview",
          "title": "RoboView",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "roboview": [
        {
          "id": "roboview-controls",
          "name": "Controls"
        }
      ]
    },
    "menus": {
      "view/title": []
    }
  },
  "extensionDependencies": [
    "ms-python.python"
  ],
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production",
    "lint": "eslint src",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "vscode-test"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/dotenv": "^6.1.1",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.3.2",
    "esbuild": "^0.25.4",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "typescript": "^5.6.3"
  }
}
